{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "start": "sirv public",
    "fix": "eslint --fix \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "fixAndFormat": "npm run fix && npm run format",
    "test": "jest",
    "postinstall": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|svelte)": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.(json)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/eslint-parser": "^7.13.4",
    "@babel/preset-env": "^7.13.5",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "autoprefixer": "^10.2.4",
    "carbon-components-svelte": "^0.29.0",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-svelte3": "^3.1.1",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.6",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.6",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.32.8",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.6.9"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  },
  "type": "module",
  "license": "MIT"
}
